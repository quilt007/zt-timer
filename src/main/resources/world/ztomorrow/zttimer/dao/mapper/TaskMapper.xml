<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="world.ztomorrow.zttimer.dao.mapper.TaskMapper">
    <resultMap id="taskMap" type="world.ztomorrow.zttimer.dao.po.TaskModel">
        <result column="task_id" property="taskId" />
        <result column="create_time" property="createTime"/>
        <result column="modify_time"  property="modifyTime"/>
        <result column="timer_id"  property="timerId"/>
        <result column="app"  property="app"/>
        <result column="output"  property="output"/>
        <result column="run_timer"  property="runTimer"/>
        <result column="cost_time"  property="costTime"/>
        <result column="status"  property="status"/>
    </resultMap>
    <insert id="batchSave" useGeneratedKeys="true" keyProperty="taskId">
        insert ignore into timer_task (app, timer_id, output, run_timer, cost_time, status)
        values
            <foreach collection="taskList" item="taskModel" separator=",">
                (#{taskModel.app},#{taskModel.timerId},
                #{taskModel.output},#{taskModel.runTimer},
                #{taskModel.costTime},#{taskModel.status})
            </foreach>
    </insert>

    <select id="getTasksByTimeRange" resultMap="taskMap">
        select * from timer_task
        <where>
            <if test="startTime != null">
                AND `run_timer` <![CDATA[>=]]> #{startTime}
            </if>
            <if test="endTime != null">
                AND `run_timer` <![CDATA[<=]]> #{endTime}
            </if>
            <if test="taskStatus != null">
                AND `status` = #{taskStatus}
            </if>
        </where>
    </select>
</mapper>